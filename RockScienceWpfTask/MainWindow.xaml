<Window x:Class="RockScienceWpfTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Water Pressure Application" 
        Height="250" Width="600"
        WindowStartupLocation="CenterScreen"
        MinHeight="200" MinWidth="550">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Buttons -->
        <UniformGrid Grid.Row="0" Rows="1" Columns="2" Margin="0,10,0,20">
            <Button Content="Ground Water Method" 
                    Command="{Binding OpenGroundWaterDialogCommand}"
                    TabIndex="1"/>
            <Button Content="Thermal Method" 
                    Command="{Binding OpenThermalDialogCommand}"
                    TabIndex="2"/>
        </UniformGrid>

        <!-- Row 1: Labels -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,10,0">
                <Label Content="Ground Water Method:" FontWeight="Bold"/>
                <Label Content="{Binding GroundWaterMethod}" Style="{StaticResource ResultLabel}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,0,0,0">
                <Label Content="Thermal Method:" FontWeight="Bold"/>
                <Label Content="{Binding ThermalMethod}" Style="{StaticResource ResultLabel}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
